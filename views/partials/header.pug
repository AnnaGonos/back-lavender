header.header(id="header")
    .header__main
        a.header__logo(href="/")
            img(src="/images/logo.jpg" alt="Основное изображение логотипа")

        .header__list
            img#header-list(src="/images/icons/list.svg" alt="Открыть меню" class="header__list-item")
            img#header-cancel(src="/images/icons/x-lg.svg" alt="Закрыть меню" class="header__list-item")

        nav.header__menu
            ul.header__menu-list(id="menu-list")
                li.header__menu-item(id="catalog-item")
                    .header__catalog-item
                        img(src="/images/icons/list.svg" alt="Меню" class="header__list-icon")
                        a(href="/catalog" class="header__menu-link") Каталог

        .header__menu-person
            .header__search-container
                input(type="text" placeholder="Розы..." class="header__search-input")
                img(src="/images/icons/search.svg" alt="Поиск" class="header__menu-person-icon")

            a(href="/favorites" class="header__menu-person-link")
                img(src="/images/icons/heart.svg" alt="" class="header__menu-person-icon")
                if favoritesCount > 0
                    p.header__menu-person-link-count= favoritesCount

            a(href="/cart", class="header__menu-person-link")
                img(src="/images/icons/bag.svg", alt="Иконка корзины-сумки", class="header__menu-person-icon")
                if cartCount > 0
                    p.header__menu-person-link-count(id="cart-count")= cartCount

            a(href="/auth/login" class="header__menu-person-link")
                img(src="/images/icons/person.svg" alt="Иконка личного кабинета" class="header__menu-person-icon")

    .header__dropdown-menu(id="dropdown-menu")
        ul.dropdown-menu__left
            li.dropdown-menu__item.active(data-target="bouquets")
                a(href="/catalog") Каталог букетов
                img(src="/images/icons/chevron-right.svg" alt=">" class="dropdown-menu__icon")

            li.dropdown-menu__item
                a(href="" class="dropdown-menu__link") Подарочные карты

            li.dropdown-menu__item(data-target="clients")
                p Клиентам
                img(src="/images/icons/chevron-right.svg" alt=">" class="dropdown-menu__icon")

            li.dropdown-menu__item
                a(href="" class="dropdown-menu__link") Блог

            li.dropdown-menu__item
                a(href="" class="dropdown-menu__link") Вакансии

            li.dropdown-menu__item
                a(href="" class="dropdown-menu__link") О нас

            li.dropdown-menu__item
                a(href="/contacts" class="dropdown-menu__link") Контакты

        .dropdown-menu__right
            ul.dropdown-menu__content.active(id="bouquets")
                li
                    a(href="/catalog?category=Онлайн-витрина") Онлайн-витрина
                li
                    a(href="/catalog?category=Монобукеты") Монобукеты
                li
                    a(href="/catalog?category=Дуобукеты") Дуобукеты
                li
                    a(href="/catalog?category=Цветочные композиции") Цветочные композиции
                li
                    a(href="/catalog?category=Большие wow-букеты") Большие wow-букеты
                li
                    a(href="/catalog?category=Свадебные") Свадебные
                li
                    a(href="/catalog?category=Подарки и предметы для дома") Подарки и предметы для дома

            ul.dropdown-menu__content(id="clients")
                li
                    a(href="#") Доставка
                li
                    a(href="#") Вопрос-ответ
                li
                    a(href="#") Отзывы
                li
                    a(href="#") Уход за букетом
